{
  "rules": {
    ".read": true,
    "users": {
      "$userId": {
        ".write": "!data.exists() || $userId == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true"
      }
    },
    "fairy_tales": {
      "$storyId": {
        ".write": "auth != null && (!data.exists() || data.child('author').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
      }
    },
    "tags": {
      "$tagName": {
        ".write": "auth != null && (!data.exists() || data.child('author').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
      }
    },
    "categories": {
      "$categoryName": {
        ".write": "auth != null && (!data.exists() || data.child('author').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
      }
    },
    "user_likes": {
      "$userId": {
        ".write": "auth != null && ($userId == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
      }
    },
    "comments": {
      "$commentId": {
        ".write":"auth != null && (!data.exists() || data.child('author').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
      }
    }
  }
}